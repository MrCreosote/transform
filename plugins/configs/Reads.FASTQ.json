{
    "external_type": "Reads.FASTQ",
    "conversions": {
        "KBaseAssembly.SingleEndLibrary": {
            "inputs": {
                "required": {
                    "shock_id": {
                        "type": "string",
                        "description": "SHOCK node id that contains the FASTQ single end reads."
                    },
                },
                "optional": {}
            }
        },
        "KBaseAssembly.PairedEndLibrary": {
            "inputs": {
                "required": {
                    "shock_ids": {
                        "type": "string",
                        "description": "List of one or two SHOCK node ids that contain the FASTQ paired end reads."
                    }
                },
                "optional": {
                    "options": {
                        "type": "JSON string",
                        "description": "Additional parameters that can be used when creating a PairedEndLibrary.",                    
                        "content": {
                            "insert_size_mean": {
                                "type": "float",
                                "description": "Average size of read inserts."
                            },
                            "insert_size_std_dev": {
                                "type": "float",
                                "description": "Standard deviation of read insert sizes."
                            },
                            "interleaved": {
                                "type": "boolean",
                                "description": "Reads are interleaved in a single file."
                            },
                            "read_orientation_outward": {
                                "type": "boolean",
                                "description": "Reads are outwardly oriented."
                            }
                        }
                    }
                }
             }
         }         
     }
}
