{
    "service": {
        "type": "Reads.FASTA",
        "conversions": {
            "KBaseAssembly.SingleEndLibrary": {
                "validate": {
                    "script": "trns_validate_KBaseAssembly.FA.py",
                    "arguments": {
                        "input_filename": "-i"
                    }
                },
                "transform": {
                    "script": "trns_transform_KBaseAssembly.FA-to-KBaseAssembly.SingleEndLibrary.py",
                    "arguments": {
                        "shock_url": {
                            "flag": "-s",
                            "type": "string",
                        },
                        "handle_url": {
                            "flag": "-h",
                            "type": "string",
                        },
                        "shock_ids": {
                            "flag": "-i", 
                            "type": "list"
                        },
                        "input_filenames": {
                            "flag": "-f",
                            "type": "list"
                        },
                        "output_filenames": {
                            "flag": "-o",
                            "type": "list"
                        }
                        # options?
                    }
                }
            },
            "KBaseAssembly.PairedEndLibrary": {
                "validate": {
                    "script": "trns_validate_KBaseAssembly.FA.py",
                    "arguments": {
                        "inputfile": "-i"
                    }
                },
                "transform": {
                    "script": "trns_transform_KBaseAssembly.FA-to-KBaseAssembly.PairedEndLibrary.py",
                    "arguments": {
                        "shock_url": {
                            "flag": "-s",
                            "type": "string",
                        },
                        "handle_url": {
                            "flag": "-h",
                            "type": "string",
                        },
                        "shock_ids": {
                            "flag": "-i", 
                            "type": "list"
                        },
                        "input_filenames": {
                            "flag": "-f",
                            "type": "list"
                        },
                        "output_filenames": {
                            "flag": "-o",
                            "type": "list"
                        }
                        "options": {
                            "flag": "-a",
                            "type": "JSON",
                            "content": {
                                "insert_size_mean": {
                                    "type": "float",
                                },
                                "insert_size_std_dev": {
                                    "type": "float",
                                },
                                "interleaved": {
                                    "type": "boolean",
                                },
                                "read_orientation_outward": {
                                    "type": "boolean",
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "client": {
        "external_type": "Reads.FASTA",
        "conversions": {
            "KBaseAssembly.SingleEndLibrary": {
                "inputs": {
                    "required": {
                        "input_filenames": {
                            "type": "list", # always use list?
                            "description": "List of files that contain the FASTA single end reads."
                        },
                    },
                    "optional": {}
                }
            },
            "KBaseAssembly.PairedEndLibrary": {
                "inputs": {
                    "required": {
                        "input_filenames": {
                            "type": "list",
                            "description": "List of one or two files that contain the FASTA paired end reads."
                        }
                    },
                    "optional": {
                        "options": {
                            "type": "JSON string",
                            "description": "Additional parameters that can be used when creating a PairedEndLibrary.",                    
                            "content": {
                                "insert_size_mean": {
                                    "type": "float",
                                    "description": "Average size of read inserts."
                                },
                                "insert_size_std_dev": {
                                    "type": "float",
                                    "description": "Standard deviation of read insert sizes."
                                },
                                "interleaved": {
                                    "type": "boolean",
                                    "description": "Reads are interleaved in a single file."
                                },
                                "read_orientation_outward": {
                                    "type": "boolean",
                                    "description": "Reads are outwardly oriented."
                                }
                            }
                        }
                    }
                }
            }         
        }
    }
}
